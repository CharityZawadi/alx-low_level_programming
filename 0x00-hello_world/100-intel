#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "CFILE variable is not set. Please set it to the name of the C file you want to compile."
    exit 1
fi

# Extract the base name of the C file (without the extension)
BASENAME=$(basename -s .c "$CFILE")

# Generate the assembly code using GCC with Intel syntax
gcc -S -masm=intel "$CFILE" -o "${BASENAME}.s"

# Check if the compilation was successful
if [ $? -eq 0 ]; then
    echo "Assembly code generated successfully and saved as ${BASENAME}.s"
else
    echo "Compilation failed. Please check your C code."
fi

